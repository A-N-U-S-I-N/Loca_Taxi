{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "index.js" // Handle API requests with index.js
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1" // Serve static files from the public directory
    }
  ]
}
