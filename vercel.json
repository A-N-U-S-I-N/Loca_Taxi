{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "^/static/(.*)", // More specific route for static files
      "dest": "/public/$1"
    },
    {
      "handle": "miss", // Important for proper handling of unmatched routes
      "src": "/(.*)",
      "dest": "/index.js" // Fallback to index.js for client-side routing
    }

  ]
}
